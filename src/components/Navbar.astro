---
import { Icon } from "astro-icon";
---

<nav class="fixed top-0 left-0 w-full h-16 z-50">
  <div
    class="absolute top-0 left-0 w-full h-full bg-black bg-opacity-50 backdrop-blur"
  >
  </div>
  <div
    class="container relative px-5 gap-1 w-full h-full flex flex-row items-center"
  >
    <div class="z-10">
      <a
        href="/"
        class="px-3 py-3 border border-transparent transition rounded-lg block tracking-wide font-bold hover:bg-white hover:text-black"
        title="Logo">PHISITH.L</a
      >
    </div>
    <div class="grow"></div>
    <div class="flex flex-row items-center gap-2">
      <a
        href="#about"
        class="uppercase text-sm tracking-wide font-medium px-3 py-2 border border-transparent rounded-lg active:bg-white/20 active:underline active:underline-offset-2 focus:bg-white/20 focus:underline focus:underline-offset-2 hover:bg-white/20 hover:underline hover:underline-offset-2"
        >About</a
      >
      <a
        href="#Skill"
        class="uppercase text-sm tracking-wide font-medium px-3 py-2 border border-transparent rounded-lg active:bg-white/20 active:underline active:underline-offset-2 focus:bg-white/20 focus:underline focus:underline-offset-2 hover:bg-white/20 hover:underline hover:underline-offset-2"
        >Skill</a
      >
      <a
        href="#Project"
        class="uppercase text-sm tracking-wide font-medium px-3 py-2 border border-transparent rounded-lg active:bg-white/20 active:underline active:underline-offset-2 focus:bg-white/20 focus:underline focus:underline-offset-2 hover:bg-white/20 hover:underline hover:underline-offset-2"
        >Project</a
      >
      <a
        href="#Contact"
        class="uppercase text-sm tracking-wide font-medium px-3 py-2 border border-transparent rounded-lg active:bg-white/20 active:underline active:underline-offset-2 focus:bg-white/20 focus:underline focus:underline-offset-2 hover:bg-white/20 hover:underline hover:underline-offset-2"
        >Contact</a
      >
      <div class="border-l-2 border-white border-solid h-[1.25rem]"></div>
      <div class="z-10 ml-2">
        <a
          href="https://www.facebook.com/beckhamps"
          class="px-3 py-2 border border-transparent rounded-lg block bg-white/10 hover:bg-white hover:text-black"
          title="My facebook"
        >
          <Icon name="mdi:facebook" class="inline-block w-6 h-6" />
        </a>
      </div>
      <div class="z-10">
        <a
          href="https://github.com/phisith"
          class="px-3 py-2 border border-transparent rounded-lg block bg-white/10 hover:bg-white hover:text-black"
          title="My github"
        >
          <Icon name="mdi:github" class="inline-block w-6 h-6" />
        </a>
      </div>
    </div>
  </div>
</nav>
