---
import { Icon } from "astro-icon";
---

<nav class="fixed top-0 left-0 w-full h-16 z-50">
  <div
    class="absolute top-0 left-0 w-full h-full bg-black bg-opacity-50 backdrop-blur"
  >
  </div>
  <div
    class="container relative px-5 gap-1 w-full h-full flex flex-row items-center"
  >
    <div class="z-10">
      <a
        href="/"
        class="p-3 border border-transparent transition rounded-lg block tracking-wide font-bold hover:bg-white hover:text-black"
        title="Logo">PHISITH.L</a
      >
    </div>
    <div class="grow"></div>
    <div class="hidden md:flex flex-row items-center gap-2">
      <a
        href="#about"
        class="uppercase text-sm tracking-wide font-medium px-3 py-2 border border-transparent rounded-lg focus:bg-white/20 focus:underline focus:underline-offset-2 hover:bg-white/20 hover:underline hover:underline-offset-2"
        >About</a
      >
      <a
        href="#skill"
        class="uppercase text-sm tracking-wide font-medium px-3 py-2 border border-transparent rounded-lg focus:bg-white/20 focus:underline focus:underline-offset-2 hover:bg-white/20 hover:underline hover:underline-offset-2"
        >Skill</a
      >
      <a
        href="#experience"
        class="uppercase text-sm tracking-wide font-medium px-3 py-2 border border-transparent rounded-lg focus:bg-white/20 focus:underline focus:underline-offset-2 hover:bg-white/20 hover:underline hover:underline-offset-2"
        >Experience</a
      >
      <a
        href="#projects"
        class="uppercase text-sm tracking-wide font-medium px-3 py-2 border border-transparent rounded-lg focus:bg-white/20 focus:underline focus:underline-offset-2 hover:bg-white/20 hover:underline hover:underline-offset-2"
        >Projects</a
      >
      <a
        href="#contact"
        class="uppercase text-sm tracking-wide font-medium px-3 py-2 border border-transparent rounded-lg focus:bg-white/20 focus:underline focus:underline-offset-2 hover:bg-white/20 hover:underline hover:underline-offset-2"
        >Contact</a
      >
      <div class="border-l-2 border-white border-solid h-[1.25rem]"></div>
      <div class="z-10 ml-2">
        <a
          href="https://www.facebook.com/beckhamps"
          class="px-3 py-2 border border-transparent rounded-lg block bg-white/10 hover:bg-white hover:text-black"
          title="My facebook"
        >
          <Icon name="mdi:facebook" class="inline-block w-6 h-6" />
        </a>
      </div>
      <div class="z-10">
        <a
          href="https://github.com/phisith"
          class="px-3 py-2 border border-transparent rounded-lg block bg-white/10 hover:bg-white hover:text-black"
          title="My github"
        >
          <Icon name="mdi:github" class="inline-block w-6 h-6" />
        </a>
      </div>
    </div>
    <div class="flex md:hidden">
      <button
        class="p-3 hover:border hover:rounded-lg"
        aria-controls="mobile-menu"
        id="menu-button"
      >
        <Icon name="majesticons:menu-line" class="block h-[2em] w-[2em]" />
      </button>
    </div>
  </div>
  <div
    id="mobile-menu"
    class="hidden flex-col md:hidden bg-black bg-opacity-50 backdrop-blur rounded-lg"
  >
    <div class="flex flex-col px-6 pb-4">
      <a
        href="#about"
        class="uppercase text-sm tracking-wide font-medium px-3 py-2 border border-transparent rounded-lg focus:bg-white/20 focus:underline focus:underline-offset-2 hover:bg-white/20 hover:underline hover:underline-offset-2"
        >About</a
      >
      <a
        href="#skill"
        class="uppercase text-sm tracking-wide font-medium px-3 py-2 border border-transparent rounded-lg focus:bg-white/20 focus:underline focus:underline-offset-2 hover:bg-white/20 hover:underline hover:underline-offset-2"
        >Skill</a
      >
      <a
        href="#experience"
        class="uppercase text-sm tracking-wide font-medium px-3 py-2 border border-transparent rounded-lg focus:bg-white/20 focus:underline focus:underline-offset-2 hover:bg-white/20 hover:underline hover:underline-offset-2"
        >Experience</a
      >
      <a
        href="#projects"
        class="uppercase text-sm tracking-wide font-medium px-3 py-2 border border-transparent rounded-lg focus:bg-white/20 focus:underline focus:underline-offset-2 hover:bg-white/20 hover:underline hover:underline-offset-2"
        >Projects</a
      >
      <a
        href="#contact"
        class="uppercase text-sm tracking-wide font-medium px-3 py-2 border border-transparent rounded-lg focus:bg-white/20 focus:underline focus:underline-offset-2 hover:bg-white/20 hover:underline hover:underline-offset-2"
        >Contact</a
      >
      <div class="border border-solid mb-4"></div>
      <div class="z-10 mb-2">
        <a
          href="https://www.facebook.com/beckhamps"
          class="flex items-center gap-2 px-3 py-2 border border-transparent rounded-lg bg-white/10 hover:bg-white hover:text-black"
          title="My facebook"
        >
          <Icon name="mdi:facebook" class="inline-block w-6 h-6" />
          Facebook
        </a>
      </div>
      <div class="z-10">
        <a
          href="https://github.com/phisith"
          class="flex items-center gap-2 px-3 py-2 border border-transparent rounded-lg bg-white/10 hover:bg-white hover:text-black"
          title="My github"
        >
          <Icon name="mdi:github" class="inline-block w-6 h-6" />
          Github
        </a>
      </div>
    </div>
  </div>
</nav>
<script>
  const button: HTMLElement | null = document.getElementById("menu-button");
  let menuE: any = document.getElementById("mobile-menu");
  button?.addEventListener("click", () => {
    console.log("click");
    if (menuE.style.display === "flex") {
      menuE.style.display = "none";
    } else {
      menuE.style.display = "flex";
    }
  });
</script>
